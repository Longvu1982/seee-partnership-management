generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  username     String        @unique
  password     String
  name         String
  email        String?
  phone        String?
  role         Role          @default(USER)
  department   Department    @default(SCHOOLOFFICE)
  events       Event[]
  userPartners UserPartner[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  isActive     Boolean       @default(true)
}

model Contact {
  id              String           @id @default(uuid())
  name            String
  email           String?
  phone           String?
  description     String?
  partnerContacts PartnerContact[]
  eventContacts   EventContact[]
  isActive        Boolean          @default(true)
}

model Partner {
  id          String  @id @default(uuid())
  name        String
  description String?
  sector      String?
  address     String?
  type        String?

  userPartners    UserPartner[]
  partnerEvents   PartnerEvent[]
  partnerContacts PartnerContact[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)
}

// Many-to-many (User ↔ Partner)
model UserPartner {
  id        String   @id @default(uuid())
  userId    String
  partnerId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User    @relation(fields: [userId], references: [id])
  partner Partner @relation(fields: [partnerId], references: [id])

  @@unique([userId, partnerId])
}

// Many-to-many (Event ↔ Partner)
model PartnerEvent {
  id        String   @id @default(uuid())
  partnerId String
  eventId   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  partner Partner @relation(fields: [partnerId], references: [id])
  event   Event   @relation(fields: [eventId], references: [id])

  @@unique([partnerId, eventId])
}

// Many-to-many (Event ↔ Contact)
model EventContact {
  id        String   @id @default(uuid())
  eventId   String
  contactId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  event   Event   @relation(fields: [eventId], references: [id])
  contact Contact @relation(fields: [contactId], references: [id])

  @@unique([eventId, contactId])
}

// Many-to-many (Partner ↔ Contact)
model PartnerContact {
  id        String   @id @default(uuid())
  partnerId String
  contactId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  partner Partner @relation(fields: [partnerId], references: [id])
  contact Contact @relation(fields: [contactId], references: [id])

  @@unique([partnerId, contactId])
}

model Event {
  id                    String      @id @default(uuid())
  title                 String
  description           String?
  startDate             DateTime?
  endDate               DateTime?
  status                EventStatus @default(ACTIVE)
  documents             String[]
  funding_amount        Float?
  funding_currency      String?
  student_reach_planned Int?
  student_reach_actual  Int?
  feedback              String?
  rating                Int?

  userId String
  user   User   @relation(fields: [userId], references: [id])

  partnerEvents PartnerEvent[]
  eventContacts EventContact[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}

enum EventStatus {
  PROSPECT
  PENDING
  ACTIVE
  CLOSED
  TERMINATED
}

enum Department {
  ELECTRICAL
  ELECTRONIC
  COMMUNICATION
  AUTOMATION
  SCHOOLOFFICE
}
