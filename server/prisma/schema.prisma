generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(cuid())
  username     String        @unique
  password     String
  name         String
  email        String?
  phone        String?
  role         Role          @default(USER)
  departmentId String
  department   Department    @relation(fields: [departmentId], references: [id])
  partnerships Partnership[]
  userPartners UserPartner[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  isActive     Boolean       @default(true)
}

model Department {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       User[]
  isActive    Boolean  @default(true)
}

model Contact {
  id       String    @id @default(cuid())
  name     String
  email    String?
  phone    String?
  partners Partner[]
  isActive Boolean   @default(true)
}

model Partner {
  id           String        @id @default(cuid())
  name         String
  description  String?
  sector       String?
  address      String?
  contactId    String
  contact      Contact?      @relation(fields: [contactId], references: [id])
  type         PartnerType   @default(ENTERPRISE)
  partnerships Partnership[]
  userPartners UserPartner[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  isActive     Boolean       @default(true)
}

// Many-to-many (User â†” Partner)
model UserPartner {
  id        String   @id @default(cuid())
  userId    String
  partnerId String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  partner      Partner       @relation(fields: [partnerId], references: [id])
  partnerships Partnership[]

  @@unique([userId, partnerId])
}

// Each partnership (activity) belongs to one user-partner pair
model Partnership {
  id                    String            @id @default(cuid())
  title                 String
  description           String?
  startDate             DateTime?
  endDate               DateTime?
  status                PartnershipStatus @default(ACTIVE)
  documents             String[]
  funding_amount        Float?
  funding_currency      String?
  student_reach_planned Int?
  student_reach_actual  Int?
  feedback              String?
  rating                Int?

  userPartnerId String
  userPartner   UserPartner @relation(fields: [userPartnerId], references: [id])

  userId String?
  user   User?   @relation(fields: [userId], references: [id])

  partnerId String?
  partner   Partner? @relation(fields: [partnerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  ADMIN
  USER
}

enum PartnershipStatus {
  ACTIVE
  COMPLETED
  PENDING
  CANCELLED
}

enum PartnerType {
  ENTERPRISE
  INDIVIDUAL
  SCHOOLAR
  SCHOOL
  GOVERNMENT
  NON_GOVERNMENT
}
